version: '3'

services:

  mongo:
    image: mongo
    container_name: mongo
    ports:
      - "27017:27017"
    volumes:
      - /data/db
      - /data/configdb
    networks:
      - dev-net

  selenium:
    image: selenium/standalone-chrome-debug
    container_name: selenium
    volumes:
      - /dev/shm:/dev/shm
    ports:
      - "4444:4444"
      - "5900:5900"
    networks:
      - dev-net

  back:
    build:
      context: $WORKSPACE
      dockerfile: docker/config/back/Dockerfile
    container_name: back
    image: back
    ports:
      - "3000:3000"
    environment:
        - MONGO_HOST=$MONGO_HOST
    networks:
      - dev-net
    depends_on:
      - mongo

  front:
    build:
      context: $WORKSPACE
      dockerfile: docker/config/front/Dockerfile
    container_name: front
    image: front
    ports:
      - "4201:4201"
    networks:
      - dev-net
    depends_on:
      - back

networks:
  dev-net:
    external: true
